<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createAccount"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/full"
    tools:context="com.example.aishanyasingh.steller.createAccountActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"

        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:text="CREATE ACCOUNT"
            android:textAlignment="center"
            android:textColor="@color/white_color"
            android:textSize="35sp"
            android:textStyle="bold"
            android:id="@+id/textView" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:textColor="#ffffffff"
            android:textColorHint="#ffffffff"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Name"
            android:shadowColor="#bcbcbc"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/penname"
            android:textColor="@color/white_color"
            android:textColorHint="#ffffffff"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pen name"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/email"
            android:textColor="@color/white_color"
            android:textColorHint="#fff"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/bio"
            android:textColor="@color/white_color"
            android:textColorHint="#ffff"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tell us something about you"
            android:layout_marginLeft="20dp"
            />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/white_color"
            android:textColorHint="#ffff" />

        <EditText
            android:id="@+id/confirmPassword"
            android:textColor="@color/white_color"
            android:textColorHint="#ffff"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:layout_marginLeft="20dp"
            />

        <Button
            android:id="@+id/create_acc_button"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="30dp"
            android:text="Sign Up"
            android:layout_weight="0.03"
            android:onClick="sign"
            style="@style/Widget.AppCompat.Button.Colored" />


    </LinearLayout>
</RelativeLayout>

